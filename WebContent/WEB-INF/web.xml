<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <!-- log4j관련 설정 추가[MyBatis에도 적용 가능] 
  		context-param 태그안에 환경 설정을 하면 서버 기동시 최초 한 번 읽어서 계속 유지가능함 
  
  -->
  
  <context-param>
	  <param-name>log4jConfigLocation</param-name>
	  <param-value>/WEB_INF/classes/log4.properties</param-value>
  </context-param>
 
 
  
  <servlet>
  <servlet-name>4people</servlet-name>
  <servlet-class>com.forpeople.Servlet_people</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>4people</servlet-name>
  <url-pattern>*.for</url-pattern>
  </servlet-mapping>
  
  <resource-ref>
  	<description>Connection</description>
  	<res-ref-name>jdbc/dbPool</res-ref-name>
  	<res-type>javax.sql.DataSource</res-type>
  	<res-auth>Container</res-auth>
  </resource-ref>
  
</web-app>